{
    "manifest_version": 2,
    "name": "m3u8Sniffer",
    "version": "1.0.0",
    "description": "m3u8嗅探器，可以列出页面的m3u8文件",
    "icons":
    {
        "16": "img/icon_16.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "browser_action": 
	{
		"default_icon": "img/icon_19.png",
		"default_popup": "popup.html"
	},
    "permissions":
    [
        "webRequest",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": 
    {
        "page": "background.html"
    }
}