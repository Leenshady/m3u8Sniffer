{
    "manifest_version": 2,
    "name": "m3u8 Sniffer",
    "version": "1.1.0",
    "description": "一个可以嗅探网页m3u8链接请求的扩展",
    "icons":
    {
        "16": "icon/icon_16.png",
        "48": "icon/icon_48.png",
        "128": "icon/icon_128.png"
    },
    "browser_action": 
	{
		"default_icon": "icon/icon_19.png",
		"default_popup": "popup.html"
	},
    "permissions":
    [
        "webRequest",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": 
    {
        "page": "background.html"
    }
}